<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_matches"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/back_hedar"
        android:gravity="center"
        android:padding="10dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/App_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_N"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/i_Logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/soccer_player"
            android:layout_marginStart="16dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="أهم المباريات القادمة"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"/>

    <!-- الدوري الإنجليزي -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الدوري الإنجليزي"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <ListView
        android:id="@+id/listEnglishLeague"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

    <!-- الدوري الإسباني -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الدوري الإسباني"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"/>

    <ListView
        android:id="@+id/listSpanishLeague"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>


</LinearLayout>
