<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF">

    <!-- الهيدر -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/back_hedar"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/i_Logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/soccer_player"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/App_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_N"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

       <!-- المحتوى في المنتصف -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:layout_below="@id/header"
        android:layout_above="@id/bottom_navigation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تغيير كلمة المرور"
            android:textSize="24sp"
            android:textStyle="bold"

            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="كلمة المرور القديمة"
            android:gravity="right"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@color/back_hedar"
            android:layout_marginBottom="16dp"
            />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="كلمة المرور الجديدة"
            android:gravity="right"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@color/back_hedar"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="تأكيد كلمة المرور"
            android:gravity="right"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@color/back_hedar"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnSavePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/back_t"
            android:textSize="16sp"
            android:padding="12dp"/>
    </LinearLayout>

</RelativeLayout>
