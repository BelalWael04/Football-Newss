<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- الهيدر -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/back_hedar"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/App_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_N"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/i_Logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/soccer_player"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- باقي المحتوى في المنتصف -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="تغيير كلمة المرور"
            android:textColor="@color/black"
            android:backgroundTint="@color/back_hedar"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="تغيير اللغة:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnArabic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="العربية"
                android:textColor="@color/black"
                android:backgroundTint="@color/back_hedar"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEnglish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="English"
                android:textColor="@color/black"
                android:backgroundTint="@color/back_hedar"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnFrench"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Français"
                android:textColor="@color/black"
                android:backgroundTint="@color/back_hedar"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAboutApp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="عن التطبيق"
            android:textColor="@color/black"
            android:backgroundTint="@color/back_hedar"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="تسجيل الخروج"
            android:textSize="16sp"
            android:backgroundTint="#FF4444"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
